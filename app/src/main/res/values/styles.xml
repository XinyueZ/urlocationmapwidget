<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget_ImageButton">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right|top</item>
        <item name="android:background">@drawable/selector_bg1_btn</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--External app-list-view.-->
    <style name="ExApps"/>

    <style name="ExApps.Text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_common_black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:selectable">true</item>
        <item name="android:clickable">true</item>
    </style>


    <style name="ExApps.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:selectable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Drawer_Item_Text">
        <item name="android:textColor">@color/text_common_black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="Drawer_Item_Text_Small" parent="@style/Drawer_Item_Text">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
</resources>
